<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space">

    <com.imangazaliev.circlemenu.CircleMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/circleMenu">

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/playRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#2196F3"
            app:colorPressed="#1E88E5"
            app:icon="@drawable/ic_play_arrow_white_24dp"
            />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/highscoreRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#4CAF50"
            app:colorPressed="#43A047"
            app:icon="@drawable/ic_poll_white_24dp"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
        android:id="@+id/settingsRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:colorNormal="#F44336"
        app:colorPressed="#E53935"
        app:icon="@drawable/ic_settings_white_24dp"/>

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/infoRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#f6df0e"
            app:colorPressed="#f6df0e"
            app:icon="@drawable/ic_info_white_24dp"/>

    </com.imangazaliev.circlemenu.CircleMenu>

</android.support.constraint.ConstraintLayout>
